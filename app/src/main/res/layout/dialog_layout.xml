<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    android:background="@drawable/bo_nen"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/tieude"
        android:text="Hello"
        android:textStyle="bold"
        android:textSize="33dp"
        android:gravity="center"
        android:fontFamily="@font/font_1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:padding="8dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="top|left"
                android:background="@drawable/smile"
                />
            <TextView
                android:layout_gravity="top"
                android:text="kh치nh"
                android:layout_marginLeft="2dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_2"
                android:textColor="#03A9F4"
                android:id="@+id/noidung"
                android:textSize="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="top|left"
                android:background="@drawable/smile1"
                />
            <TextView
                android:layout_gravity="top"
                android:text="kh치nh"
                android:layout_marginLeft="2dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_2"
                android:textColor="#03A9F4"
                android:id="@+id/noidung1"
                android:textSize="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="top|left"
                android:background="@drawable/smile2"
                />
            <TextView
                android:layout_gravity="top"
                android:text="kh치nh"
                android:layout_marginLeft="2dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_2"
                android:textColor="#03A9F4"
                android:id="@+id/noidung2"
                android:textSize="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="top|left"
                android:background="@drawable/smile3"
                />
            <TextView
                android:layout_gravity="top"
                android:text="kh치nh"
                android:layout_marginLeft="2dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_2"
                android:textColor="#03A9F4"
                android:id="@+id/noidung3"
                android:textSize="20dp"
                />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/bt_dialog"
        android:text="OK"
        android:layout_marginBottom="5dp"
        />
</LinearLayout>